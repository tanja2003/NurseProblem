<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Farben -->
    <Color x:Key="BgColor">#1E1E1E</Color>
    <Color x:Key="CardColor">#252526</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="BorderColor">#3C3C3C</Color>

    <SolidColorBrush x:Key="BgBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="CardBrush" Color="{DynamicResource CardColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>
    <SolidColorBrush x:Key="ListRowBrush" Color="#252526"/>
    
    
    
    
    
    <SolidColorBrush x:Key="ListViewItemBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}"/>
    <SolidColorBrush x:Key="ListRowAltBrush" Color="#2A2D2E"/>
    <SolidColorBrush x:Key="ListRowHoverBrush" Color="#333337"/>
    <SolidColorBrush x:Key="ListRowSelectedBrush" Color="#094771"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#3C3C3C"/>

    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource BgBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <!-- Text -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <!-- Border Card -->
    <Style x:Key="BorderCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Buttons -->
    <Style x:Key="ButtonCardStyle" TargetType="Button">
        <Setter Property="Background" Value="#3A3D41"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- ListView -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <!-- ListViewItem -->
    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="6"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2A2D2E"/>
            </Trigger>

            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#094771"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="#2D2D30"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="6"/>
    </Style>


</ResourceDictionary>