<Window x:Class="NurseProblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nurse Scheduler" Width="780"
        Height="550"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F8"
        xmlns:local="clr-namespace:NurseProblem.Converter">
    <DockPanel Margin="30">

        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <TextBlock FontSize="28" FontWeight="SemiBold">Nurse Scheduler</TextBlock>
            <TextBlock FontSize="14" Foreground="Gray">Intelligente Dienstplanung für Hebamen</TextBlock>
        </StackPanel>
        <UniformGrid Rows="2" Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{StaticResource DashboardCardStyle}" 
                    Content="📅 Dienstplan anzeigen"
                    Command="{Binding OpenCalendarCommand}"/>
            <Button Style="{StaticResource DashboardCardStyle}"
                    Content="⚙️ Dienstplan berechnen"
                    Command="{ Binding CalculateScheduleCommand}"/>
            <Button Style="{StaticResource DashboardCardStyle}"
                    Content="🧑‍⚕️ Pflegekräfte verwalten"
                    Command="{Binding OpenNurseManagementCommand}"/>
            <Button Style="{StaticResource DashboardCardStyle}"
                    Content="🗄 Daten und Historie"
                    Command="{Binding OpenHistoryCommand}"/>
        </UniformGrid>

        <TextBlock DockPanel.Dock="Bottom" Margin="0,30,0,0"
                   FontSize="12" Foreground="Gray" Text="{Binding Status}"/>
    </DockPanel>

</Window>
