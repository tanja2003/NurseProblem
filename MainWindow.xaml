<Window x:Class="NurseProblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nurse Scheduler" Height="700" Width="600"
        xmlns:local="clr-namespace:NurseProblem.Converter">
    <Window.Resources>
        <local:NurseToColorConverter x:Key="NurseToColorConverter"/>
        <local:DictionaryConverter x:Key="NurseConverter" Map="{x:Static local:Dictionarys.NurseNames}"/>
        <local:DictionaryConverter x:Key="DayConverter" Map="{x:Static local:Dictionarys.DayNames}"/>
        <local:DictionaryConverter x:Key="ShiftConverter" Map="{x:Static local:Dictionarys.ShiftNames}"/>
        <local:WeekendColorConverter x:Key="WeekendColorConverter"/>
    </Window.Resources>

    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click_Month">Monatsansicht</Button>
            <Button>Mitarbeiteransicht</Button>
            <Button>Schichtansicht</Button>
        </StackPanel>
        <Button Content="Schedule berechnen"
                Command="{Binding CalculateCommand}"
                Margin="0,0,0,10"/>

        
        <DataGrid ItemsSource="{Binding Schedule.Assignments}" AutoGenerateColumns="False" Visibility="Hidden">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background"
                    Value="{Binding NurseId, Converter={StaticResource NurseToColorConverter}}"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nurse" Binding="{Binding NurseId, Converter={StaticResource NurseConverter}}"/>
                <DataGridTextColumn Header="Day" Binding="{Binding Day, Converter={StaticResource DayConverter}}"/>
                <DataGridTextColumn Header="Shift" Binding="{Binding Shift, Converter={StaticResource ShiftConverter}}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        
        <DataGrid ItemsSource="{Binding MonthSchedule}" AutoGenerateColumns="False" Visibility="Hidden">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background"
        Value="{Binding NurseId, Converter={StaticResource NurseToColorConverter}}"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tag" Binding="{Binding NurseName}"/>
                <DataGridTextColumn Header="Früh" Binding="{Binding Days[0]}"/>
                <DataGridTextColumn Header="Spät" Binding="{Binding Days[1]}"/>
                <DataGridTextColumn Header="Nacht" Binding="{Binding Days[2]}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel>
            <!-- Wochentage -->
            <UniformGrid Columns="7">
                <TextBlock Text="Mo" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Di" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Mi" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Do" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Fr" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Sa" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="So" HorizontalAlignment="Center" FontWeight="Bold"/>
            </UniformGrid>

            <ItemsControl ItemsSource="{Binding Weeks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="7"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsWeekend}" Value="True">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            
                                            <TextBlock Text="{Binding Date.Day}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <Border Background="{Binding FrühNurseId, Converter={StaticResource NurseToColorConverter}}">
                                                <TextBlock Text="{Binding FrühName}" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border Background="{Binding SpätNurseId, Converter={StaticResource NurseToColorConverter}}">
                                                <TextBlock Text="{Binding SpätName}" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border Background="{Binding NachtNurseId, Converter={StaticResource NurseToColorConverter}}">
                                                <TextBlock Text="{Binding NachtName}" HorizontalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>






    </StackPanel>
</Window>
