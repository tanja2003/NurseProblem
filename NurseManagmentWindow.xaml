<Window x:Class="NurseProblem.NurseManagmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurseProblem"
        mc:Ignorable="d"
        Title="NurseManagmentWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding Nurses}">
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="Alle Hebammen">
                    <GridViewColumn Header="First Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Hebammen Nummer" Width="100" DisplayMemberBinding="{Binding Id}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Grid.Row="1" Text="Neue Hebamme hinzufugen" Margin="25,10,10,10" FontSize="15"/>
        <TextBox Grid.Row="2" Text="{Binding Nurses}"  HorizontalAlignment="Left" Style="{StaticResource TextboCardStyle }"/>
    </Grid>
</Window>
