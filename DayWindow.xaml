<Window x:Class="NurseProblem.DayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurseProblem"
        mc:Ignorable="d"
        Title="DayWindow" Height="450" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Datum -->
        <TextBlock Text="{Binding Date, StringFormat='{}{0:dddd, dd.MM.yyyy}'}"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

        <!-- Schichten -->
        <StackPanel Grid.Row="1" Margin="0 15 0 15">

            <!-- Früh -->
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Früh:" Width="70" VerticalAlignment="Center"/>
                <ComboBox Width="200" 
                          ItemsSource="{Binding AllNurses}"
                          SelectedItem="{Binding FrühSelected}"
                          DisplayMemberPath="Name"/>
            </StackPanel>

            <!-- Spät -->
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Spät:" Width="70" VerticalAlignment="Center"/>
                <ComboBox Width="200" 
                          ItemsSource="{Binding AllNurses}"
                          SelectedItem="{Binding SpätSelected}"
                          DisplayMemberPath="Name"/>
            </StackPanel>

            <!-- Nacht -->
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Nacht:" Width="70" VerticalAlignment="Center"/>
                <ComboBox Width="200" 
                          ItemsSource="{Binding AllNurses}"
                          SelectedItem="{Binding NachtSelected}"
                          DisplayMemberPath="Name"/>
            </StackPanel>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Speichern" Width="90" Margin="5"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Abbrechen" Width="90" Margin="5"
                    Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
